{
  "extends": "airbnb",
  "rules": {
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }]
  },
  "env": {
    "jest": true
  },
  "settings": {
    "import/core-modules": [
      "styled-components/native", 
      "react", 
      "enzyme", 
      "react-test-renderer",
      "react-native",
      "enzyme-adapter-react-16",
      "jest-styled-components/native"
    ]
  }
}