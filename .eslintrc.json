{
  "extends": ["standard", "standard-react"],
  "parser": "babel-eslint",
  "env": {
    "jest": true,
    "browser": true
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "camelcase": ["error", { "ignoreDestructuring": true, "allow": ["pokemon_entries", "entry_number", "pokemon_species"] }]
  },
  "settings": {
    "import/core-modules": [
      "styled-components/native", 
      "react", 
      "enzyme", 
      "react-test-renderer",
      "react-native",
      "enzyme-adapter-react-16",
      "jest-styled-components/native"
    ]
  }
}